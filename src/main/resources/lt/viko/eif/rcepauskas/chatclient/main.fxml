<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lt.viko.eif.rcepauskas.chatclient.MainController">
   <children>
      <TextField fx:id="ip" layoutX="14.0" layoutY="7.0" prefHeight="25.0" prefWidth="140.0" promptText="ip" text="127.0.0.1" />
      <ListView focusTraversable="false" layoutX="14.0" layoutY="184.0" prefHeight="209.0" prefWidth="140.0" />
      <Button fx:id="btnConnect" layoutX="13.0" layoutY="102.0" mnemonicParsing="false" onAction="#connectToServer" prefHeight="25.0" prefWidth="140.0" text="Connect" />
      <Label layoutX="14.0" layoutY="167.0" text="Online users:" />
      <TextField fx:id="message" layoutX="162.0" layoutY="368.0" prefHeight="25.0" prefWidth="374.0" promptText="message" />
      <Button fx:id="btnSend" disable="true" layoutX="543.0" layoutY="368.0" mnemonicParsing="false" onAction="#sendMessage" text="Send" />
      <TextField fx:id="port" layoutX="14.0" layoutY="39.0" prefHeight="25.0" prefWidth="140.0" promptText="port" text="6666" />
      <Label layoutX="13.0" layoutY="140.0" text="Status:" />
      <Label fx:id="status" layoutX="55.0" layoutY="140.0" text="Disconnected" textFill="RED" />
      <TextField fx:id="name" layoutX="13.0" layoutY="71.0" prefHeight="25.0" prefWidth="140.0" promptText="name" text="user1" />
      <ScrollPane fx:id="messageList" layoutX="162.0" layoutY="8.0" prefHeight="350.0" prefWidth="429.0">
         <content>
            <VBox fx:id="messageVBox" prefHeight="347.0" prefWidth="427.0" />
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
